<!-- Dashboard Page -->

<!DOCTYPE html>
<html lang="en">

<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/css/bootstrap.min.css" rel="stylesheet"
        integrity="sha384-QWTKZyjpPEjISv5WaRU9OFeRpok6YctnYmDr5pNlyT2bRjXh0JMhjY6hW+ALEwIH" crossorigin="anonymous">
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/js/bootstrap.bundle.min.js"
        integrity="sha384-YvpcrYf0tY3lHB60NNkmXc5s9fDVZLESaAA55NDzOxhy9GkcIdslK1eN7N6jIeHz"
        crossorigin="anonymous"></script>
    
    <title>Dashboard</title>
    <!-- Custom CSS -->
    <link rel="stylesheet" href="/css/styles.css">
</head>

<body class="bg-light">
    <div class="container mt-4">
        <div class="d-flex justify-content-between align-items-center mb-4">
            <h1 class="display-4"><a style="text-decoration: none;" href="dashboard">Dashboard</a></h1>
            <form action="/dataform" method="get">
                <button class="btn btn-primary btn-lg">Add Data</button>
            </form>
            <form action="/search" method="get">
                <input class="btn" placeholder="search" name="name" id="name">
                <button class="btn btn-primary btn-lg">Search</button>
            </form>
            <form action="/logout" method="get">
                <button class="btn btn-primary btn-lg">Logout</button>
            </form>
        </div>

        <div class="card shadow">
            <div class="card-body p-0">
                <table class="table table-hover mb-0">
                    <thead class="thead-light">
                        <tr>
                            <th>ID</th>
                            <th>Name</th>
                            <th>Standard</th>
                            <th>Rank</th>
                            <th>Actions</th>
                        </tr>
                    </thead>
                    <tbody>
                        <% data.forEach(item => { %>
                        <tr>
                            <td><%= item._id %></td>
                            <td><%= item.name %></td>
                            <td><%= item.std %></td>
                            <td><%= item.rank %></td>
                            <td>
                                <a href="/updateData/<%= item._id%>" class="btn btn-sm btn-warning me-2">Update</a>
                                <form action="/delete/<%= item._id%>" method="post" class="d-inline">
                                    <button class="btn btn-sm btn-danger">Delete</button>
                                </form>
                            </td>
                        </tr>
                        <% }) %>
                    </tbody>
                </table>
            </div>
        </div>
    </div>
    

    
    
</body>
</html>
